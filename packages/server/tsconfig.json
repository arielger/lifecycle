{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "baseUrl": "./src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // Add "skipLibCheck" to fix error with dat.gui types (dom types not present on server)
    "skipLibCheck": true
  }
}